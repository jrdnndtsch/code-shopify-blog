<div class="container">

  <p id="notice"><%= notice %></p>

  <%= image_tag @profile.avatar.url(:small), class: 'profile-img' %>
  <p>
    <%= @profile.first_name %> <%= @profile.last_name %>
  </p>

  <p>
    <%= @profile.website_url %>
  </p>


  <%= link_to 'New Blog Post', new_blog_post_path, class: 'button'%>
  <%= link_to 'Edit Profile', edit_profile_path(@profile), class: 'button' %>


  <% @blog_posts.each do |blog_post| %>
    <div class="blog-post">
      <h2><%= blog_post.title %></h2>
      <p><%= blog_post.created_at.strftime('%A, %b %d') %></p>
      <p><%= blog_post.excerpt.html_safe %></p>
      <p><%= link_to 'Read More...', blog_post %></p>

      <% if blog_post.belongs_to_current_user?(current_user) %>
        <p><%= link_to 'Edit', edit_blog_post_path(blog_post), class: 'button' %></p>
        <p><%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button-warning' %></p>
      <% end %>

    </div>
  <% end %>
</div>


<script>
  jQuery(document).ready(function($){
    Rainbow.color();
  });
</script>