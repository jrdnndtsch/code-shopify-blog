<% content_for :title, "Code Shopify | #{@blog_post.title}" %>
<% content_for :meta_description, @blog_post.meta_description %>

<div class="blog-post">
  <div class="main-content">
    <h2 class="primary-title"><%= @blog_post.title %></h2>
    <p><%= @blog_post.updated_at.strftime('%A, %b %d, %Y') %></p>
    <% if @blog_post.photo.present? %>
    <%= image_tag @blog_post.photo.url %>
    <% end %>
    <div class="post-content"><%= @blog_post.content.html_safe %></div>
    <div class="post-info">
      <p>Posted <%= @blog_post.updated_at.strftime('%A, %b %d, %Y') %></p>
      <div class="tags">
        <span>Tags:</span>
        <ul>
          <% @blog_post.tags.each do |tag|%>
          <li><%= tag%></li>
          <% end %>
        </ul>
      </div>
    </div>
    <%= link_to 'more posts', blog_posts_path, class: 'button button-centered more-posts'%>
    <% if @blog_post.belongs_to_current_user?(current_user) %>
    <div class="blog-post-admin-actions">
      <%= link_to 'Edit', edit_blog_post_path(@blog_post), class: 'button' %>
      <%= link_to 'Destroy', @blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button-warning' %>
    </div>
    <% end %>
  </div>
  <div class="sidebar">
    <ul>
      <li><a href="https://apps.shopify.com/design-packs" target="_blank"> <%= image_tag 'design_packs_card.png' %></a></li>
      <li><a href="https://codeecommerce.com/" target="_blank"> <%= image_tag 'codeshopify_ad.png' %></a></li>
    </ul>
  </div>
</div>




